#!/usr/bin/env php
<?php

use function PeacefulBit\LispMachine\VM\initDefaultModules;

require_once __DIR__ . '/../vendor/autoload.php';

$eval = initDefaultModules();

while ($line = fgets(STDIN)) {
    try {
        $result = $eval($line);
        if (!is_null($result)) {
            echo $result, PHP_EOL;
        }
    } catch (Exception $e) {
        echo $e->getMessage(), PHP_EOL;
        echo $e->getTraceAsString(), PHP_EOL;
    }
}
